<div class="login-box">
<div class="login-logo">
  <b>SGV</b>
</div><!-- /.login-logo -->
<div class="login-box-body">
  <p class="login-box-msg">Sistema de Gestão de Viaturas do CBMDF.</p>
  
  <form action="auth_user_path" method="post">
    <div class="form-group has-feedback">
      <input type="text" id="login" class="form-control" placeholder="Login"/>
    </div>
    <div class="form-group has-feedback">
      <input type="password" id="password" class="form-control" placeholder="Senha"/>
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <div class="row">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
    </div>
  </form>

  <br>
  <%= link_to 'Cadastrar usuário', new_user_path %>

</div><!-- /.login-box-body -->
</div><!-- /.login-box -->